<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blockvote.votingclient.RegistrationConfirmationFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_confirmation_firstname"
        android:text="Show first name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_confirmation_lastname"
        android:text="Show last name" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_confirmation_timestamp"
        android:text="Show time when voter clicks OK" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_confirmation_blurb"
        android:text="If you agree with the above data, please select YES" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:text="YES"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_confirmation_yes_button" />
        <Button
            android:text="NO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reg_confirmation_no_button" />
    </LinearLayout>

</LinearLayout>
