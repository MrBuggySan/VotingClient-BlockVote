<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.blockvote.fragments.GenerateQRFragment"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="Creating registration QR code..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GenQR_textBlurb1"
            android:textAlignment="center"
            android:textSize="24sp"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/QR_animation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:lottie_fileName="possibleLoading.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/genQR_UI">

        <TextView
            android:text="Success!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/GenQR_textBlurb2"
            android:textAlignment="center"
            android:textSize="24sp"
            android:paddingTop="@dimen/activity_vertical_margin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_QRCode"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />


    </LinearLayout>


</RelativeLayout>
